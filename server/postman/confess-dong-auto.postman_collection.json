{
  "info": {
    "name": "Confess Dong API - 20 Endpoints Complete",
    "_postman_id": "confess-dong-20-endpoints",
    "description": "Full CRUD collection: 4 Create, 6 Read, 6 Update, 4 Delete = 20 endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "CREATE (4 endpoints)",
      "item": [
        {
          "name": "1. Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const body = pm.response.json();",
                  "  if (body.data && body.data.token) {",
                  "    pm.environment.set('userToken', body.data.token);",
                  "    pm.environment.set('userId', body.data.id);",
                  "    console.log('✅ CREATE #1: User registered');",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser3\",\n  \"email\": \"testuser3@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "2. Create Message",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const body = pm.response.json();",
                  "  if (body.data && body.data.id) {",
                  "    pm.environment.set('lastId', body.data.id);",
                  "    console.log('✅ CREATE #2: Message ID ' + body.data.id);",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{userToken}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"recipient_name\": \"Dina\",\n  \"message\": \"Test message from Postman\",\n  \"is_anonymous\": true,\n  \"image_url\": \"https://via.placeholder.com/400\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["messages"]
            }
          }
        },
        {
          "name": "3. Report Message",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"spam\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/messages/{{lastId}}/report",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{lastId}}", "report"]
            }
          }
        },
        {
          "name": "4. Upload File (optional)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key": "file", "src": "", "type": "file", "description": "Upload any file"}
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/uploads",
              "host": ["{{baseUrl}}"],
              "path": ["uploads"]
            }
          }
        }
      ]
    },
    {
      "name": "READ (6 endpoints)",
      "item": [
        {
          "name": "1. Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const body = pm.response.json();",
                  "  if (body.data && body.data.token) {",
                  "    pm.environment.set('userToken', body.data.token);",
                  "    console.log('✅ READ #1: Login success');",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser3\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "2. Get User Profile",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{userToken}}"}],
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "3. List Messages (paging)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/messages?page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["messages"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "pageSize", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "4. List By Recipient",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/messages/recipient/Dina",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "recipient", "Dina"]
            }
          }
        },
        {
          "name": "5. Get Message By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/messages/{{lastId}}",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{lastId}}"]
            }
          }
        },
        {
          "name": "6. Admin - List Messages",
          "request": {
            "method": "GET",
            "header": [{"key": "x-admin-token", "value": "{{admin_token}}"}],
            "url": {
              "raw": "{{baseUrl}}/admin/messages",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "messages"]
            }
          }
        }
      ]
    },
    {
      "name": "UPDATE (6 endpoints)",
      "item": [
        {
          "name": "1. Update Message (Full)",
          "request": {
            "method": "PUT",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"recipient_name\": \"Dina Updated\",\n  \"message\": \"Updated content\",\n  \"is_anonymous\": false,\n  \"image_url\": \"https://via.placeholder.com/600\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/messages/{{lastId}}",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{lastId}}"]
            }
          }
        },
        {
          "name": "2. Set Anonymize",
          "request": {
            "method": "PATCH",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_anonymous\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/messages/{{lastId}}/anonymize",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{lastId}}", "anonymize"]
            }
          }
        },
        {
          "name": "3. Approve Message",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "x-admin-token", "value": "{{admin_token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_approved\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/messages/{{lastId}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{lastId}}", "approve"]
            }
          }
        },
        {
          "name": "4. Like Message",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/messages/{{lastId}}/like",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{lastId}}", "like"]
            }
          }
        },
        {
          "name": "5. Unlike Message",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/messages/{{lastId}}/unlike",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{lastId}}", "unlike"]
            }
          }
        },
        {
          "name": "6. Update Image URL",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"image_url\": \"https://via.placeholder.com/800\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/messages/{{lastId}}/image",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{lastId}}", "image"]
            }
          }
        }
      ]
    },
    {
      "name": "DELETE (4 endpoints)",
      "item": [
        {
          "name": "1. Hard Delete Message",
          "request": {
            "method": "DELETE",
            "header": [{"key": "x-admin-token", "value": "{{admin_token}}"}],
            "url": {
              "raw": "{{baseUrl}}/messages/{{lastId}}",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{lastId}}"]
            }
          }
        },
        {
          "name": "2. Soft Delete Message",
          "request": {
            "method": "DELETE",
            "header": [{"key": "x-admin-token", "value": "{{admin_token}}"}],
            "url": {
              "raw": "{{baseUrl}}/messages/{{lastId}}/soft",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{lastId}}", "soft"]
            }
          }
        },
        {
          "name": "3. Bulk Delete Messages",
          "request": {
            "method": "DELETE",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "x-admin-token", "value": "{{admin_token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ids\": [1, 2, 3]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/messages/bulk",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "bulk"]
            }
          }
        },
        {
          "name": "4. Delete Upload (optional)",
          "request": {
            "method": "DELETE",
            "header": [{"key": "x-admin-token", "value": "{{admin_token}}"}],
            "url": {
              "raw": "{{baseUrl}}/uploads/1",
              "host": ["{{baseUrl}}"],
              "path": ["uploads", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "BONUS: Admin",
      "item": [
        {
          "name": "Admin Login (JWT)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const body = pm.response.json();",
                  "  if (body.token) {",
                  "    pm.environment.set('admin_token', body.token);",
                  "    console.log('✅ Admin JWT token saved');",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/login",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "login"]
            }
          }
        }
      ]
    }
  ],
